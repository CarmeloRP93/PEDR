{% extends 'CriveroPruebaBundle::main.html.twig' %}

{% block title %}Vista de {{torneo.nombre}} {% endblock %}
{% block contenido %}
    <div class="container text-center">
        <h2>Detalles del Torneo</h2>
        {% if torneo.estado == "Solicitud Presentada" %}
            <button class="btn btn-default">Aceptar Solicitud</button>
            <button class="btn btn-danger">Rechazar Solicitud </button>
        {% endif %}
        {% block detalles %}
            {% if torneo.estado == "Validado" %}
                <h3>Ver informaci√≥n de equipos</h3>
                {% for equipo in torneo.equipos %}
                    <label class="control-label span7 text-left">{{equipo}}</label>
                    <button class="btn btn-default">Ver puesto</button>
                    <button class="btn btn-danger">Eliminar equipo</button><br>
                {% endfor %}
            {% endif %} 
        {% endblock%}
    </div>

{% endblock %}