{% extends 'CriveroPruebaBundle::main.html.twig' %}

{% block title %} Vista de Torneos {% endblock %}
{% block navegation %}        
        <ul>
		<li><a href="{{url('crivero_prueba_clientes')}}">Clientes</a></li>
		<li><a href="{{url('crivero_prueba_monitores')}}">Monitores</a></li>
		<li><a href="{{url('crivero_prueba_canchas')}}">Canchas</a></li>
		<li><a class="active" href="#">Torneos</a></li>
                <li><a href="{{url('crivero_prueba_sesiones')}}">Sesiones</a></li>
	</ul>
{% endblock %}
{% block contenido %}
<div id="buscador">
    <form>
        <input type="search" name="torneo" placeholder="Buscar torneo"/>
    </form>
</div>
<h1>Listado de Torneos</h1>
{% for torneo in torneos %}
    <a href="{{url('crivero_prueba_torneo', {'matricula': torneo.matricula})}}" class="fila {{cycle(["par","impar"], loop.index)}}"> {{ torneo.matricula }} - {{ torneo.nombre }} - {{torneo.estado}}</a>
{% endfor %}

{% endblock %}