                <li><a href="{{url('moduloclientes_cliente_torneoClientes', {'matricula': torneo.matricula})}}" class="fila {{cycle(["par","impar"], loop.index)}}">{{ torneo.nombre }}</a></li>
                {%endif%}
            {% endfor %}
    </ul>
    <ul>
        <p>Finalizado: </p>
        {% for torneo in torneos %}
            {%if torneo.estado == "Finalizado" %}
                <li><a href="{{url('moduloclientes_cliente_torneoClientes', {'matricula': torneo.matricula})}}" class="fila {{cycle(["par","impar"], loop.index)}}">{{ torneo.nombre }}</a></li>
                {%endif%}
            {% endfor %}
    </ul>
{% endblock %}