{# empty Twig template #}
{% extends 'moduloclientesclienteBundle::main.html.twig' %}

{% block title %} Vista de Torneos {% endblock %}
{% block navegation %}        
        <ul>
        <li><a href="{{url('moduloclientes_cliente_reservasClientes')}}">Reservas</a></li>
        <li><a href="{{url('moduloclientes_cliente_canchasClientes')}}">Canchas</a></li>
        <li><a class="active" href="">Torneos</a></li>
        <li><a href="{{url('moduloclientes_cliente_sesionesClientes')}}">Entrenamiento</a></li>
	</ul>
{% endblock %}                
{% block contenido %}
<div id="buscador">
    <form>
        <input type="search" name="torneo" placeholder="Buscar torneo"/>
    </form>
</div>
<h1>Listado de Torneos</h1>
{% for torneo in torneos %}
    <a href="{{url('moduloclientes_cliente_torneoClientes', {'matricula': torneo.matricula})}}" class="fila {{cycle(["par","impar"], loop.index)}}"> {{ torneo.matricula }} - {{ torneo.nombre }} - {{ torneo.tiempo}} </a>
{% endfor %}

{% endblock %}